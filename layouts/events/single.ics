{{ $tz := $.Site.Data.events.tz -}}
{{ $eventDate := $.Site.Data.events.date -}}
{{ $startTime := (printf "%sT%s:00Z" $eventDate $.Site.Data.events.startTime) -}}
{{ $endTime := (printf "%sT%s:00Z" $eventDate $.Site.Data.events.endTime) -}}

BEGIN:VCALENDAR
CALSCALE:GREGORIAN
METHOD:PUBLISH
VERSION:2.0
BEGIN:VEVENT
DTSTAMP:{{ dateFormat "20060102T150405Z" $startTime }}
STATUS:CONFIRMED
UID:{{ dateFormat "20060102T150405Z" $startTime }}-{{ .Params.lab }}@tfsg.code4.ro
DTSTART;TZID={{ $tz }}:{{ dateFormat "20060102T150405" $startTime }}
DTEND;TZID={{ $tz }}:{{dateFormat "20060102T150405" $endTime }}
SUMMARY:Hack Day #{{ $.Site.Data.events.edition }} - {{ .Title }}
DESCRIPTION:{{ trim (plainify .Content) "\n" }}
LOCATION:{{ .Params.location }}
URL:{{ "/" | absLangURL }}
END:VEVENT
END:VCALENDAR
